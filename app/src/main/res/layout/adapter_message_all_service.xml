<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_white_corner_10dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivLeft"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@id/ivClose"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivClose"
        app:shapeAppearance="@style/shapeable_iv_circle"
        tools:src="@drawable/ic_default_5g" />

    <TextView
        android:id="@+id/tvLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5.5dp"
        android:layout_marginEnd="3dp"
        android:drawableRight="@drawable/ic_message_arrow"
        android:drawablePadding="4.5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingVertical="3dp"
        android:textColor="@color/black_333333"
        android:textSize="13dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/ivClose"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@id/ivLeft"
        app:layout_constraintRight_toLeftOf="@id/tvShowTime"
        app:layout_constraintTop_toTopOf="@id/ivClose"
        tools:text="关联配置关联配置关联配置关联配置关联配置关联配置关联配置" />

    <TextView
        android:id="@+id/tvShowTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:textColor="@color/gray_999999"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@id/ivClose"
        app:layout_constraintRight_toLeftOf="@id/ivClose"
        app:layout_constraintTop_toTopOf="@id/ivClose"
        tools:text="18:00" />

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="19.5dp"
        android:layout_height="19.5dp"
        android:layout_marginTop="10.5dp"
        android:layout_marginEnd="6.5dp"
        android:padding="5dp"
        android:src="@drawable/ic_message_close"
        app:layout_constraintBottom_toTopOf="@id/ivCenter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivCenter"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:padding="0.5dp"
        app:layout_constraintBottom_toTopOf="@id/tvTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivClose"
        app:shapeAppearance="@style/shapeable_iv_circle"
        app:strokeColor="@color/gray_eeeeee"
        app:strokeWidth="1dp"
        tools:src="@drawable/ic_default_5g" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_goneMarginTop="20dp"
        android:paddingHorizontal="12dp"
        android:textColor="@color/black_333333"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@id/tvSubTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivCenter"
        tools:text="主标题主标题主标题主标题主标题主标题主标题主标题主标题主标题主标题主标题" />

    <TextView
        android:id="@+id/tvSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingHorizontal="12dp"
        android:textColor="@color/gray_999999"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@id/rvMessageAttribute"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        tools:text="副标题副标题副标题副标题副标题副标题副标题副标题副标题副标题副标题副标题副标题副标题副标题" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMessageAttribute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:paddingHorizontal="12dp"
        app:layout_constraintBottom_toTopOf="@id/viewLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubTitle"
        tools:itemCount="3" />

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_eeeeee"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/rvMessageOperate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvMessageAttribute" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMessageOperate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="12dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewLine"
        tools:itemCount="3" />

</androidx.constraintlayout.widget.ConstraintLayout>
