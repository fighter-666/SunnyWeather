<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_80_corner_10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="15.5dp"
        android:layout_height="15.5dp"
        android:layout_gravity="center"
        android:layout_marginStart="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_message_marquee" />

    <com.gongwen.marqueen.MarqueeView
        android:id="@+id/marqueeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="7.5dp"
        android:inAnimation="@anim/in_bottom"
        android:outAnimation="@anim/out_top"
        android:flipInterval="3000"
        app:marqueeAnimDuration="300" />
</LinearLayout>