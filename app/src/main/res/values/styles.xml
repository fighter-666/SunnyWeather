<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="shapeable_iv_circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <declare-styleable name="CustomTitleBarViewGroup">
        <attr name="title" format="string" />
        <attr name="right_title" format="string" />
        <attr name="back_src" format="reference" />
        <attr name="right_src" format="reference" />
        <attr name="imageWidth3" format="dimension" />
        <attr name="right_imageWidth3" format="dimension" />
        <attr name="imageHeight3" format="dimension" />
        <attr name="right_imageHeight3" format="dimension" />
    </declare-styleable>

    <style name="ProgressBar_Mini_blue" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/progressbar_mini_blue</item>
    </style>

    <style name="mydialog_style_transparent" parent="@android:style/Theme.Dialog" tools:ignore="ResourceCycle">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="RoundedStyle35">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">35dp</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="RoundedStyle10">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>
</resources>