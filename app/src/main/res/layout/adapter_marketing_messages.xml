<?xml version="1.0" encoding="utf-8"?>
<com.ct.client.intimateblue.widget.IntimateHorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/intimateHorizontalScrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    app:scrollDistance="70dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="18dp"
            tools:layout_width="250dp">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivLeft"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginVertical="18dp"
                android:src="@drawable/ic_default_5g"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearance="@style/shapeable_iv_circle"
                tools:src="@drawable/ic_default_5g" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="您成功充值了xx元话费您成功充值了xx元话费您成功充值了xx元话费您成功充值了xx元话费"
                android:textColor="@color/black_333333"
                android:textSize="15dp"
                app:layout_constrainedWidth="true"
                app:layout_constraintLeft_toRightOf="@id/ivLeft"
                app:layout_constraintRight_toLeftOf="@id/tvTime"
                app:layout_constraintTop_toTopOf="@id/ivLeft"
                tools:text="您成功充值了xx元话费您成功充值了xx元话费您成功充值了xx元话费您成功充值了xx元话费" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:00"
                android:textColor="@color/gray_999999"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@id/tvTitle"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvTitle"
                tools:text="18:00" />

            <TextView
                android:id="@+id/tvSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="余额更新可能延迟，如，如未更新可稍后额更新可能延迟，如未更新新可稍后"
                android:textColor="@color/gray_999999"
                android:textSize="13sp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@id/ivLeft"
                app:layout_constraintLeft_toLeftOf="@id/tvTitle"
                app:layout_constraintRight_toLeftOf="@id/tvRedDot"
                tools:text="余额更新可能延迟能延迟，如未更新新可稍后能延迟，如未更新新可稍后" />


            <com.example.sunnyweather.widget.MessageRedDot
                android:id="@+id/tvRedDot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/tvSubTitle"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvSubTitle" />


            <ImageView
                android:id="@+id/ivTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_message_top"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvTop"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/blue_608eea"
            android:gravity="center"
            android:text="置顶"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tvDelete"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/clLeft"
            android:background="@color/red_ff4343"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="14dp" />


    </LinearLayout>


</com.ct.client.intimateblue.widget.IntimateHorizontalScrollView>



