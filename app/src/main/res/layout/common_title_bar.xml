<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlTitleBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <RelativeLayout
            android:id="@+id/rlLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivBackButton"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_titlebar_back_black"
                    android:contentDescription="返回" />
                <ImageView
                    android:id="@+id/ivCusButton3"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="fitXY"
                    android:visibility="invisible"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivCusTag3"
                    android:layout_width="45dp"
                    android:layout_height="12dp"/>
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tvCommonTitle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/rlRight"
            android:layout_toRightOf="@+id/rlLeft"
            android:focusable="true"
            android:gravity="center"
            android:paddingVertical="9dp"
            android:text="标题标题标题标题标题标题标题标题标题标题标题标题标题"
            android:textColor="@color/black_333333"
            android:textSize="18dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:autoSizeMinTextSize="12dp"
            android:autoSizeTextType="uniform"/>

        <RelativeLayout
            android:id="@+id/rlRight"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/ivCusButton2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="fitXY"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/ivCusButton1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/ivCusTag2"
                    android:layout_width="45dp"
                    android:layout_height="12dp"/>

                <ImageView
                    android:id="@+id/ivCusTag1"
                    android:layout_width="45dp"
                    android:layout_height="12dp"/>
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/ivLine"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:src="@color/gray_dddddd"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>