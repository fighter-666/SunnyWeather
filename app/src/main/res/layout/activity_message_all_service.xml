<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--标题栏-->
    <com.example.sunnyweather.widget.CommonTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:custom_title="全部服务消息"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabMessage"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/titleBar"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:paddingBottom="5dp"
        android:layout_weight="1"
        android:visibility="gone"
        app:layout_collapseMode="pin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleBar"
        app:tabIndicator="@drawable/shape_tab_indicator"
        app:tabIndicatorColor="@color/black_333333"
        app:tabIndicatorHeight="3dp"
        app:tabMinWidth="50dp"
        app:tabMode="scrollable"
        app:tabPaddingBottom="3dp"
        app:tabRippleColor="@null" />


    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/smartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/gray_f4f4f4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabMessage"
        app:layout_constraintVertical_weight="1">

        <com.scwang.smart.refresh.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp2Message"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>