<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_999999"
        android:textSize="12dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvContent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="相关属性" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        app:layout_goneMarginStart="0dp"
        android:maxLines="1"
        android:textColor="@color/black_333333"
        android:textSize="12dp"
        android:visibility="invisible"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@id/tvTitle"
        app:layout_constraintRight_toLeftOf="@id/llSubTitle"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="属性内内容属性内容" />

    <LinearLayout
        android:id="@+id/llSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/bg_eaefff_corner_10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="8.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvContent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center"
            android:minWidth="50dp"
            android:textColor="@color/blue_5b82ff"
            android:textSize="11dp"
            tools:text="动作按钮" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
